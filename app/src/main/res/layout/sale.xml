<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lineyout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/sale_editText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="@string/qingshurutiaoma_Query"
            android:inputType="textNoSuggestions" />

        <Button
            android:id="@+id/sale_chaxun_button"
            style="@style/common_Button_Disable"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/common_button_disable"
            android:text="@string/chaxun_Query" />
    </LinearLayout>

    <View
        android:id="@+id/sale_underLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/lineyout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/sale_TextView"
        android:layout_below="@id/sale_underLine"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:scrollbars="vertical"
        android:textSize="36dp" />

</RelativeLayout>