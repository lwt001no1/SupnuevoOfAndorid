<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/query_editText"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="@string/qingshurutiaoma_Query"
            android:inputType="text" />

        <Button
            android:id="@+id/query_Button_Find"
            style="@style/common_Button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/common_button"
            android:text="@string/chaxun_Query" />

        <Button
            android:id="@+id/query_Button_Qrcode"
            style="@style/common_Button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/common_button"
            android:text="@string/saoma_Query" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_Query"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
         >
    </ListView>

</LinearLayout>